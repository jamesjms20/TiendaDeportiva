@model ProductViewModel

@{
    ViewData["Title"] = "Editar producto";
}
<div class="container">
<h1>Editar Producto</h1>

@using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CatId)
    @Html.HiddenFor(model => model.Id)


    <div class="form-group">
        <label for="nombre">Nombre:</label>
        <input type="text" class="form-control" id="nombre" name="Nombre" value="@Model.Nombre">
    </div>

    <div class="form-group">
        <label for="descripcion">Descripción:</label>
        <textarea class="form-control" id="descripcion" name="Descripcion">@Model.Descripcion</textarea>
    </div>
    <div class="form-group">
        <label for="precio">Precio:</label>
        <textarea class="form-control" id="precio" name="Precio">@Model.Precio</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Actualizar</button>
}
</div>