<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] TiendaDeportiva</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TiendaDeportiva.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tu-archivo-de-estilos.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TiendaDeportiva</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li> 
  
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Categorias</a>
                        </li>
                       
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="ViewCart">Carrito</a>
                        </li>
                    
                      
                        @if (Context.Session.GetString("IsAuthenticated") == "true")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Person" asp-action="Index">Usuario</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="GetOrders">Pedidos</a>
                            </li>
                            <li class="nav-item">
                                <form class="nav-link" asp-controller="Login" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-link text-dark">Cerrar sesión</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Iniciar sesión</a>
                            </li>
                            
                        }


                    </ul>
                </div>
            </div>

        </nav>
       
    </header>
    @if (TempData.ContainsKey("SuccessMessage"))
    {
        <div id="successMessage" class="alert alert-info">@TempData["SuccessMessage"]</div>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
       
       


    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - TiendaDeportiva - 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Función para ocultar el mensaje de éxito después de 5 segundos
        setTimeout(function () {
            var successMessage = document.getElementById('successMessage');
            if (successMessage) {
                successMessage.style.display = 'none';
            }
        }, 5000); // Ocultar después de 5000 milisegundos (5 segundos)
    </script>

</body>
</html>
