@model IEnumerable<CategoryViewModel>

@{
    ViewData["Title"] = "category";
}

<div class="container">
    <div class="row mb-3">
        <div class="col-md-4">
            <input type="text" id="nombre" class="form-control" placeholder="Nombre">
        </div>
        <div class="col-md-6">
            <input type="text" id="descripcion" class="form-control" placeholder="Descripción">
        </div>
        <div class="col-md-2">
            <button id="agregar" class="btn btn-primary">Agregar</button>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td>
                        <a href="#" class="category-link" data-id="@item.Id">Editar</a>
                        <a href="#" class="product-link" data-id="@item.Id">Productos</a>
                        <a href="#" class="delete-product-link" data-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $('.category-link').click(function (e) {
            e.preventDefault();

            var categoryId = $(this).data('id');

            $.ajax({
                url: '@Url.Action("Edit", "Category")',
                type: 'GET',
                data: { id: categoryId },
                success: function (response) {
                    $('main').html(response);
                },
                error: function () {
                    alert('Ocurrió un error al cargar la vista.');
                }
            });
        });

        $('.product-link').click(function (e) {
            e.preventDefault();

            var categoryId = $(this).data('id');

            $.ajax({
                url: '@Url.Action("Index", "Product")',
                type: 'GET',
                data: { id: categoryId },
                success: function (response) {
                    $('main').html(response);
                },
                error: function () {
                    alert('Ocurrió un error al cargar la vista de productos.');
                }
            });
        });

        $('.delete-product-link').click(function (e) {
            e.preventDefault();

            var categoryId = $(this).data('id');

            $.ajax({
                url: '@Url.Action("Delete", "Category")',
                type: 'DELETE',
                data: { id: categoryId },
                success: function (response) {
                    if (response) {
                        alert('Categoría eliminada correctamente.');
                        location.reload(); 
                    } else {
                        alert('Ocurrió un error al eliminar la categoría.');
                    }
                },
                error: function () {
                    alert('Ocurrió un error al eliminar la categoría.');
                }
            });
        });

        $('#agregar').click(function (e) {
            e.preventDefault();

            var nombre = $('#nombre').val();
            var descripcion = $('#descripcion').val();

            $.ajax({
                url: '@Url.Action("AddCategory", "Category")',
                type: 'POST',
                data: { nombre: nombre, descripcion: descripcion },
                success: function (response) {
                    if (response) {
                        alert('Categoría agregada correctamente.');
                        location.reload(); 
                    } else {
                        alert('Ocurrió un error al agregar la categoría.');
                    }
                },
                error: function () {
                    alert('Ocurrió un error al agregar la categoría.');
                }
            });
        });
    });
</script>
